{% block javascripts %}
	<script src="{{ asset('js/cleave.min.js') }}"></script>
	<script>
		window.onload = function(){
			var compte_b = document.querySelector('#compte_b').value ;
			
			if(compte_b == "CAISSE AR"){
				
				document.querySelector('#num_compte').style.display = "none";
