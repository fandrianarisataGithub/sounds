{% block javascripts %}
    
<script src="{{ asset('js/cleave.min.js') }}"></script>

<script>

	$(document).ready(function () {
        $('button[data-target]').on('click', function (e) {
            e.preventDefault();
            var tar = $(this).attr("data-target");
            if (tar == "#modal_form_fh_1") {

            var s_cp = $("span[data-span=cp]").text();
            var s_sf = $("span[data-span=sf]").text();
            var s_cd = $("span[data-span=cd]").text();
            var s_sv = $("span[data-span=sv]").text();

            var cp = $('.cp').val(s_cp);
            var sf = $('.sf').val(s_sf);
            var cd = $('.cd').val(s_cd);
            var sv = $('.sv').val(s_sv);

            // alert(cp+"/"+sf+"/"+cd+"/"+sv)
            } else if (tar == "#modal_form_fh_2") {
            var s_ln = $("span[data-span=ln]").text();

            var s_sview = $("span[data-span=sview]").text();

            var ln = $('.ln').val(s_ln);

            var sview = $('.sview').val(s_sview);
            }
        })
    })
</script>


