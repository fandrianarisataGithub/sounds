{% extends "base.html.twig" %}
{% block title %}
	Fournisseur
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/dashboard.css')}}">
{% endblock %}

{% block body %}

	<section
		id="contents" class="container-fluid">
		<!-- entete content -->
		{% include "nav2.html.twig" %}
		<!-- / entete content -->

		<!-- contenue  -->
			<div id="hrs_content"> <div>
				<div class="col-lg-12 col-md-12 col-sm-12 col-sm-12 col-xs-12">
					<section class="section_part" id="section_part_top">
						<div class="sous_titre">
							<div class="btn_group">
								<a href="{{ path('fournisseur', {'pseudo_hotel' : hotel}) }}" class="btn btn-default">
									<span>Fournisseur</span>
								</a>
								<a href="{{ path('recap_fournisseur', {'pseudo_hotel' : hotel}) }}" class="btn btn-warning">
									<span>Récap fournisseur</span>
								</a>
							</div>
						</div>
					</section>
				</div>
				
				<div class="col-lg-8 col-md-8 col-sm-12 col-sm-12 col-xs-12">
					<div class="div_fact_retard">
                        <div class="petit_entete">
                            <h3><span>Facture en retard de paiement</span></h3>
                            <div class="ligne_titre"></div>
                        </div>
                        <div class="tableau_fournisseur">
                            <div class="date_tab_fournisseur">
                                <span>{{ today | date('d/m/Y') }}</span>
                            </div>
                            <div class="tableau">
                                <table class="table">
                                   <thead>
                                         <tr>
                                            <th><span>TYPE</span></th>
                                            <th><span>FOURNISSEUR</span></th>
                                            <th><span>MONTANT</span></th>
                                            <th><span>RESTE A PAYER</span></th>
                                            <th><span>N° FACTURE</span></th>
                                        </tr>
                                   </thead>
                                   <tbody>
                                   {% for item in tab_fours_recap_p_ret %}
                                        <tr>
                                            <td>
                                                <span>{{ item.getType() | raw }}</span>
                                            </td>
                                            <td>
                                                <span>{{ item.getNomFournisseur() | raw }}</span>
                                            </td>
                                            <td>
                                                <span class="montant">{{ item.getMontant() }}</span>
                                            </td>
                                            <td>
                                                <span class="montant">{{ item.getReste() }}</span>
                                            </td>
                                            <td>
                                                <span>{{ item.getNumeroFacture() | raw }}</span>
                                            </td>
                                        </tr>

                                   {% endfor %}
                                       
                                   </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
				</div>
                {# trosa #}
                <div class="col-lg-8 col-md-8 col-sm-12 col-sm-12 col-xs-12">
					<div class="div_fact_retard">
                        <div class="petit_entete">
                            <h3><span>Paiement à venir</span></h3>
                            <div class="ligne_titre"></div>
                        </div>
                        {% set i = 0 %}
                        {% for item in tab_fours_recap_p_av %}
                        <div class="tableau_fournisseur">
                            <div class="date_tab_fournisseur">
                                <span>{{ item[i].getEcheance() | date('d/m/Y') }}</span> 
                            </div>
                            <div class="tableau">
                                <table class="table">
                                   <thead>
                                         <tr>
                                            <th><span>TYPE</span></th>
                                            <th><span>FOURNISSEUR</span></th>
                                            <th><span>MONTANT</span></th>
                                            <th><span>RESTE A PAYER</span></th>
                                            <th><span>N° FACTURE</span></th>
                                        </tr>
                                   </thead>
                                   <tbody>                                       
                                        {% for t  in item %}
                                                <tr>
                                                    <td>
                                                        <span>{{ t.getType() | raw }}</span>
                                                    </td>
                                                    <td>
                                                        <span>{{ t.getNomFournisseur() | raw }}</span>
                                                    </td>
                                                    <td>
                                                        <span class="montant">{{ t.getMontant() }}</span>
                                                    </td>
                                                    <td>
                                                        <span class="montant">{{ t.getReste() }}</span>
                                                    </td>
                                                    <td>
                                                        <span>{{ t.getNumeroFacture() | raw }}</span>
                                                    </td>
                                                </tr>

                                        {% endfor %}
                                   </tbody>
                                </table>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
				</div>
                {# fin trosa #}
			</div>
		</div>
		<!-- / contenue  -->
	</section>


{% endblock %}

